{
  "name": "elevator-challenge",
  "version": "1.0.0",
  "description": "Make a JavaScript elevator",
  "main": "index.js",
  "directories": {
    "test": "tests"
  },
  "type": "module",
  "scripts": {
    "build:server": "tsc",
    "build:web": "esbuild web/main.ts --bundle --format=esm --outfile=dist/web/main.js",
    "build": "npm run build:server && npm run build:web",
    "test": "npm run build && mocha dist/tests/*_test.js",
    "server": "cd web-app-version && nodemon server/index.js",
    "start": "node dist/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Alex-Tideman/elevator_challenge.git"
  },
  "author": "Turing School",
