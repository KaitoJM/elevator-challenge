  "bugs": {
    "url": "https://github.com/Alex-Tideman/elevator_challenge/issues"
  },
  "homepage": "https://github.com/Alex-Tideman/elevator_challenge",
  "devDependencies": {
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "babel-core": "^6.22.1",
    "babel-preset-es2015": "^6.22.0",
    "chai": "^3.5.0",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "express": "^5.2.1"
  }
