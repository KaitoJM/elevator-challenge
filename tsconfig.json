{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": [
    "*.ts",
    "tests/*.ts",
    "app/Clock.ts",
    "app/Elevator.ts",
    "app/LobbyPolicy.ts",
    "app/MovementHistory.ts",
    "app/Person.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
